<div class="container-md mt-5 bg-light p-5">

  <h4 class="p-3 pt-0 text-dark border-bottom">Some quick example text to explain the app and what it does.</h4>

  <div class="row d-flex justify-content-evenly">
    <div class="col-md-5 d-none d-md-block">
      <div class="card ms-5 mb-4 mt-4 shadow">
        <img class="card-img-top" src="../img/chair-1.png" alt="chair">
        <div class="card-body bg-primary">
          <img src="../img/logo_light.png" class="mw-100" alt="be|seated logo">
        </div>
      </div>
    </div>

    <div class="col-md-6 justify-content-center">
      <form class="mt-3">
        <div class="mb-3">
          <label for="name-signup">First Name</label>
          <input type="text" class="form-control" id="firstName-signup" placeholder="John">
        </div>
        <div class="mb-3">
          <label for="name-signup">Last Name</label>
          <input type="text" class="form-control" id="lastName-signup" placeholder="Doe">
        </div>
        <div class="mb-3">
          <label for="email-signup">Email</label>
          <input type="text" class="form-control" id="email-signup" placeholder="email">
        </div>
        <div class="mb-3">
          <label for="password-signup">Create Password</label>
          <input type="password" class="form-control" id="password-signup" placeholder="password">
          <input type="checkbox" onclick="showPassword()"> Show Password
        </div>
        <div class="d-grid justify-content-md-end">
          <button type="submit" class="btn btn-danger text-light register" href='/dashboard/:id'>Register</button>
        </div>
      </form>
        <div class="col-md-4 d-md-none">
          <div class="card ms-5 mb-4 mt-4 shadow">
            <img class="card-img-top" src="../img/chair-1.png" alt="chair">
            <div class="card-body bg-primary bg-gradient">
              <img src="../img/logo_light.png" class="mw-100" alt="be|seated logo">
            </div>
          </div>
        </div>
    </div>
  </div>

  <script src="./js/createAccount.js"></script>