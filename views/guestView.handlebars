<head>

  <div class="container align-middle">

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Be|Seated</title>
    <link rel="stylesheet" href="../css/style.css">
</head>
<div class="bg-dark">
  <img src="../img/logo_light.png" class="p-1 pt-4 pb-4 w-100" alt="be|seated logo">
</div>

<div class="d-flex flex-column text-center bg-secondary pt-3 pb-5">
  <h1>Let's party!</h1>
</div>


<section class="guestViewContainer bg-secondary pt-3 pb-5">
  <!-- User Search  -->

  {{#if guests}}
  <div class="border border-dark rounded  d-flex mt-2">
    <div class="d-flex flex-wrap justify-content-center">
      {{#each guests}}
      {{> table}}
      {{/each}}
    </div>
  </div>
  {{else}}
  <div>There were no results found</div>
  {{/if}}
</section>
</div>

