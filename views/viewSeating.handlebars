<div class="container-md mt-5 bg-light p-5">
  {{> backToDashboard}}
  <div class="mx-2 border-bottom">
    <h4>{{userFN}}, select an event to view the seating chart: </h4>
  </div>
  <div class="row col-12">
    <div class="dropdown m-2 d-flex justify-content-between align-items-start button">
      <a class="btn btn-danger dropdown-toggle text-light shadow" href="#" role="button" id="dropdownMenuLink"
        data-bs-toggle="dropdown" aria-expanded="false">
        Select a Seating Chart to View
      </a>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
        {{#each events}}
        <li><a class="dropdown-item" href="../tables/{{adminId}}?eventId={{this.eventId}}">{{this.eventName}}</a></li>
        {{/each}}
      </ul>
    </div>

  </div>
  <div class="d-flex flex-wrap">
    {{#each guests}}
    {{> table}}
    {{/each}}
  </div>
</div>