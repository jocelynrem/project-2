<div class="p-3 border rounded mt-3 bg-secondary">
        <h5 class="flex-column fw-bold">Step 2- Upload your seating chart</h5>


    <div class="dropdown m-1">
        <a class="btn btn-dark dropdown-toggle text-light shadow-sm" href="#" role="button" id="dropdownMenuLink"
            data-bs-toggle="dropdown" aria-expanded="false">
            Select an event to add a seating chart
        </a>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            {{#each events}}
            <li><a class="dropdown-item" href="../upload/{{adminId}}?eventId={{this.eventId}}">{{this.eventName}}</a>
            </li>
            {{/each}}
        </ul>
    </div>
        <h4 class="fw-bold m-1 text-uppercase text-danger my-3" id="renderEventName"></h4>
        <div class="d-grid gap-2">
                   <input type="file" id="myFile" name="uploadfile" class="mb-2" >
        <button type="submit" class="submitButton btn bg-dark text-light">Submit</button> 
        </div>

</div>

<script src="/js/eventheaders.js"></script>
<script src='/js/uploadSeating.js'></script>

