<div class='modal show' id='add-user-info' tabindex='-1' role='dialog'>
  <div class='modal-dialog' role='document'>
    <div class='modal-content'>
      <div class='modal-header'>
        <h5 class='modal-title'>Add a new Guest</h5>
      </div>

      <div class='modal-body'>
        <form>
          <div class='form-group'>
            <label for='inputfirstName'>Guest First Name</label>
            <input type='text' class='form-control' id='guestaddFName' />
          </div>
          <div class='form-group'>
            <label for='inputlastName'>Guest Last Name</label>
            <input type='text' class='form-control' id='guestaddLName' />
          </div>
          <div class='form-group'>
            <label for='inputNewTable'>Table Assignment</label>
            <input type='text' class='form-control' id='guestaddTable' />
          </div>
        </form>
      </div>

      <div class='modal-footer'>
        <button id='add_GuestBtn' type='button' class='btn btn-primary'>Add Guest</button>
        <button id='closeModalAdd'  type='button' class='btn btn-secondary' data-dismiss='modal'>Close</button>
      </div>
    </div>
  </div>
</div>
