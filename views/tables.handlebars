<div class="container-md mt-5 bg-light p-5">
  {{> backToDashboard}}
  <div class="mx-2 border-bottom">
    <h4>{{userFN}}, select an event to view the seating chart: </h4>
  </div>
  <div class="row col-12">
    <div class="dropdown m-3">
      <a class="btn btn-danger dropdown-toggle text-light shadow" href="#" role="button" id="dropdownMenuLink"
        data-bs-toggle="dropdown" aria-expanded="false">
        Select a Seating Chart to View
      </a>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
        {{#each events}}
        <li><a class="dropdown-item" href="?eventId={{this.eventId}}">{{this.eventName}}</a></li>
        {{/each}}
      </ul>
    </div>
    <h1 class="fw-bold m-1 d-flex justify-content-end text-uppercase" id="renderEventName"></h1>
    <button id="update_Guest">modify guest seating</button>
    <button id="add_Guest">add new guest</button>
    <button id="delete_Guest">delete guest</button>
    <div class="border border-dark rounded d-flex">
      <div class="d-flex flex-wrap justify-content-center">
        {{#each guests}}
        {{> table}}
        {{/each}}

      </div>
    </div>
  </div>
</div>


{{> updateGuestModal}}
{{> addGuestModal}}
{{> deleteGuestModal}}

<script src="/js/eventheaders.js"></script>
<script src="/js/modal.js"></script>
