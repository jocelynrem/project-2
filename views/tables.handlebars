<div class="container-md mt-5 bg-light p-5">
  <div class="bg-primary d-flex">
    <div class="row col-12">
      <div class="dropdown m-3">
        <a class="btn btn-danger dropdown-toggle text-light" href="#" role="button" id="dropdownMenuLink"
          data-bs-toggle="dropdown" aria-expanded="false">
          Select a Seating Chart to View
        </a>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
          {{#each events}}
            <li><a class="dropdown-item" href="?eventId={{this.eventId}}">{{this.eventName}}</a></li>
          {{/each}}
        </ul>

        <div>
            {{#each guests}}
              <li>{{this.firstName}} {{this.lastName}} {{this.tableNumber}} </li>
            {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>